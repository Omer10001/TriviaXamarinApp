<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaXamarinApp.Views.SignUpPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding ErrorMessage}" TextColor="Red"  />
            <Label Text="Email" />
            <Entry Placeholder="" Text="{Binding Email}"/>
            <Label Text="Password" />
            <Entry Placeholder="" Text="{Binding Password}" />
            <Label Text="NickName" />
            <Entry Placeholder="" Text="{Binding NickName}" />
            <Button Text="Go" Command="{Binding SignUpCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>